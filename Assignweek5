# ### q.2)

# In[21]:


binary_input = input("Enter binary input : ")
iparr = np.array(list(binary_input),dtype=int)
ar=[]
cone,ctwo=0,0
for i in range(len(iparr)):
    if(iparr[i]==1) :
        cone+=1
    else :
        ctwo+=1
for i in range(cone) :
    ar.append(1)
for i in range(ctwo) :
    ar.append(0)
newarr = np.array(list(ar),dtype=int)
print(newarr)


