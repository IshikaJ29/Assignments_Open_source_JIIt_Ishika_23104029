n = 12
X = np.arange(n)
Y1 = (1 - X / float(n)) * np.random.uniform(0.5, 1.0, n)
plt.bar(X, +Y1, facecolor='#9999ff', edgecolor='red')
plt.show()
Y2 = (1 - X / float(n)) * np.random.uniform(0.5, 1.0, n)
plt.bar(X, -Y2, facecolor='#ff9999', edgecolor='blue')
plt.show()x= [-np.pi,-(np.pi)/4, -(np.pi)/2, 0, (np.pi)/4, (np.pi)/2, np.pi]
T = np.tan(x)
S= np.sin(x)
C= np.cos(x)
plt.plot(x, 1/C, label ='sec')
plt.plot(x, 1/S, label ='cosec')
plt.plot(x, T, label ='tan')
plt.plot(x, 1/T, label ='cot')
plt.legend(loc='upper right')
plt.show()methods = ['A', 'B', 'C', 'D']
result1 = [2, 5, 8, 5]
result2 = [3, 2, 5, 7]

bar_width = 0.35

r1 = np.arange(len(methods))
r2 = [x + bar_width for x in r1]

plt.bar(r1, result1, color='skyblue', width=bar_width, edgecolor='grey', label='Result1')
plt.bar(r2, result2, color='lightcoral', width=bar_width, edgecolor='grey', label='Result2')

plt.xlabel('Method', fontweight='bold')
plt.ylabel('Value', fontweight='bold')
plt.title('Comparison of Result1 and Result2 by Method')
plt.xticks([r + bar_width/2 for r in range(len(methods))], methods) 
plt.legend()


plt.tight_layout() 
plt.show()


